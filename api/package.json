{
  "name": "triplethink-api",
  "version": "1.0.0",
  "description": "TripleThink API - Event-sourced narrative construction system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "validate-spec": "swagger-cli validate api-spec.yaml"
  },
  "keywords": [
    "fiction",
    "narrative",
    "event-sourcing",
    "epistemic",
    "writing"
  ],
  "author": "TripleThink Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "swagger-cli": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/tests/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
